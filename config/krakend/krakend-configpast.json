{
  "version": 3,
  "port": 8081,
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST","PUT","DELETE"],
      "allow_headers": ["*"],
      "expose_headers": ["*"],
      "max_age": "12h",
      "allow_credentials": true,
      "options_passthrough": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/user/login",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": {
        "url_pattern": "/Admin/user/login",
        "encoding": "json",
        "host": ["http://10.43.100.29:8000"],
        "disable_tls_verify": true
      },
      "method": "POST"
    },
    {
      "endpoint": "/user/register",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": {
        "url_pattern": "/user/register",
        "encoding": "json",
        "host": ["http://10.43.100.29:8000"],
        "disable_tls_verify": true
      },
      "method": "POST"
    },
    {
      "endpoint": "/venta/all",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": {
        "url_pattern": "/venta/all",
        "encoding": "json",
        "host": ["http://10.43.100.29:8000"],
        "disable_tls_verify": true
      },
      "method": "GET"
    },
    {
      "endpoint": "/accounts/all",
      "output_encoding": "json",
      "backend": {
        "url_pattern": "/Admin/user/getAccounts",
        "encoding": "json",
        "host": ["http://10.43.100.29:8000"],
        "disable_tls_verify": true
      },
      "method": "GET",
      "extra_config": {
        "github.com/devopsfaith/krakend-jsonschema2transform": {
          "/accounts/all": {
            "0": {
              "input_data": {
                "as": "single"
              }
            }
          }
        }
      }
    }, 
    {
      "endpoint": "/post/account",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": {
        "url_pattern": "/Admin/user/register",
        "encoding": "json",
        "host": ["http://10.43.100.29:8000"],
        "disable_tls_verify": true
      },
      "method": "Post"
    },
    {
      "endpoint": "/Admin/user/{id}",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": {
        "url_pattern": "/Admin/user/{id}",
        "encoding": "json",
        "host": ["http://10.43.100.29:8000"],
        "disable_tls_verify": true
      },
      "methods": ["Get", "Put"]
    },
    {
      "endpoint": "/Admin/user/put/{id}",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": {
        "url_pattern": "/Admin/user/{id}",
        "encoding": "json",
        "host": ["http://10.43.100.29:8000"],
        "disable_tls_verify": true
      },
      "methods": [ "Put"]
    },
    {
      "endpoint": "/Admin/user/delete/{id}",
      "output_encoding": "json",
      "input_headers": ["*"],
      "backend": {
        "url_pattern": "/Admin/user/{id}",
        "encoding": "json",
        "host": ["http://10.43.100.29:8000"],
        "disable_tls_verify": true
      },
      "methods": [ "Delete"]
    }
    
  ]
}
